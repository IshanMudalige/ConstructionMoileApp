<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aim.procurementapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewOrderActivity" android:parentActivityName=".HomeActivity" android:label="Order History"/>
        <activity android:name=".HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SaveOrderActivity" android:parentActivityName=".ChooseSupActivity" android:label="Save Order" />
        <activity android:name=".ChooseSupActivity" android:parentActivityName=".AddOrderActivity" android:label="Choose Supplier"/>
        <activity android:name=".AddOrderActivity" android:parentActivityName=".HomeActivity" android:label="Add Order">

        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>